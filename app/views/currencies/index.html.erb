<section>
  <div id="collected_currencies_chart" class="simple_pie_chart" width='300px' height='100px'>
    <table>
      <tr>
        <th>Collected</th>
        <td><%= Currency.collected.count %></td>
      </tr><tr>
        <th>Not Collected</th>
        <td><%= Currency.not_collected.count %></td>
      </tr>
    </table>
  </div>

  <h1>Currencies</h1>

  <label for="filter_field_for_currencies">Filter</label>
  <input id="filter_field_for_currencies" type="text" class="js-filter_control"/>

  <table>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Status</th>
      <th></th>
    </tr>

  <% @currencies.each do |currency| %>
    <tr class="js-filter_target" data-filter_matchable="<%= currency.name %>">
      <td><%= currency.name %></td>
      <td><%= currency.code %></td>
      <td><%= currency.collected_by_user?(current_user) ? 'Collected' : 'Not Collected' %></td>
      <td><%= link_to 'Show', currency %></td>
    </tr>
  <% end %>
  </table>
</section>
